@page "/pets/edit"
@using PawPal.Domain
@using PawPal.Repositories
@using PawPal.Services
@inject IPetRepository PetRepository
@inject IFileService FileService
@inject NavigationManager NavigationManager

<h1>Edit Pet</h1>
<hr />

@if (Pet == null)
{
    <p>Loading...</p>
}
else
{
    <div class="row">
        <div class="col-md-6">
            <EditForm Model="Pet" OnValidSubmit="UpdatePet" Enctype="multipart/form-data">
                <DataAnnotationsValidator />
                <ValidationSummary class="text-danger" />

                <input type="hidden" @bind="Pet.Id" />
                <input type="hidden" @bind="Pet.ShelterId" />

                <div class="mb-3">
                    <label class="form-label">Name</label>
                    <InputText @bind-Value="Pet.Name" class="form-control" />
                </div>

                <div class="mb-3">
                    <label class="form-label">Breed</label>
                    <InputText @bind-Value="Pet.Breed" class="form-control" />
                </div>

                <div class="mb-3">
                    <label class="form-label">Description</label>
                    <InputTextArea @bind-Value="Pet.Description" class="form-control" />
                </div>

                <div class="mb-3">
                    <label class="form-label">Status</label>
                    <div class="form-check">
                        <InputCheckbox @bind-Value="Pet.IsAdopted" class="form-check-input" />
                        <label class="form-check-label">Mark as Adopted</label>
                    </div>
                </div>

                <button type="submit" class="btn btn-primary">Save Changes</button>
                <a href="/pets" class="btn btn-secondary">Cancel</a>
            </EditForm>
        </div>
    </div>
}

@code {
    [SupplyParameterFromQuery] public int Id { get; set; }
    [SupplyParameterFromForm] public Pet? Pet { get; set; }

    protected override async Task OnInitializedAsync()
    {
        if (Pet == null) Pet = await PetRepository.GetPetByIdAsync(Id);
    }

    private async Task UpdatePet()
    {
        await PetRepository.UpdatePetAsync(Pet!);
        NavigationManager.NavigateTo("/pets");
    }
}