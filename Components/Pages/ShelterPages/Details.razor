@page "/shelters/details"
@using PawPal.Domain
@using PawPal.Repositories
@inject IShelterRepository ShelterRepository
@inject IPetRepository PetRepository
@inject NavigationManager NavigationManager

<PageTitle>Shelter Details</PageTitle>

@if (shelter is null)
{
    <p><em>Loading...</em></p>
}
else
{
    <h1>@shelter.Name</h1>
    <hr />

    <div class="row">
        <div class="col-md-5">
            <div class="card">
                <div class="card-body">
                    <h5 class="card-title">Contact Info</h5>
                    <p><strong>Address:</strong> @shelter.Address</p>
                    <p><strong>Phone:</strong> @shelter.ContactNumber</p>
                    <p><strong>Email:</strong> @shelter.Email</p>
                    <p><strong>Website:</strong> <a href="@shelter.Website" target="_blank">@shelter.Website</a></p>
                    <p class="mt-3">@shelter.Description</p>
                </div>
            </div>
            <div class="mt-3">
                <a href="/shelters" class="btn btn-outline-secondary">Back to List</a>
            </div>
        </div>

        <div class="col-md-7">
            <h3>Pets at this Shelter</h3>
            @if (shelterPets == null || !shelterPets.Any())
            {
                <div class="alert alert-info">No pets listed yet.</div>
            }
            else
            {
                <div class="list-group">
                    @foreach (var pet in shelterPets)
                    {
                        <a href="/pets/details?id=@pet.Id" class="list-group-item list-group-item-action d-flex justify-content-between align-items-center">
                            <div>
                                <strong>@pet.Name</strong> (@pet.Breed)
                            </div>
                            <span class="badge bg-primary rounded-pill">View</span>
                        </a>
                    }
                </div>
            }
        </div>
    </div>
}

@code {
    private Shelter? shelter;
    private IEnumerable<Pet>? shelterPets;

    [SupplyParameterFromQuery]
    public int Id { get; set; }

    protected override async Task OnInitializedAsync()
    {
        shelter = await ShelterRepository.GetShelterByIdAsync(Id);

        if (shelter is null)
        {
            NavigationManager.NavigateTo("notfound");
        }
        else
        {
            // Fetch pets belonging to this shelter
            shelterPets = await PetRepository.GetPetsByShelterIdAsync(shelter.Id);
        }
    }
}