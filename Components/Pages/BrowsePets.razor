@page "/pets"
@using Microsoft.EntityFrameworkCore
@using PawPal.Domain
@inject PawPal.Data.PawPalContext Db

<PageTitle>Browse Pets</PageTitle>

<div class="container py-4">

    <!-- Header (matches "old UI" vibe) -->
    <div class="page-header p-4 p-md-5 mb-4">
        <div class="d-flex flex-column flex-md-row justify-content-between align-items-md-end gap-3">
            <div>
                <h1 class="mb-2 fw-bold">Browse Pets</h1>
                <p class="text-muted mb-0">
                    Explore adoptable pets from trusted shelters. No account needed to browse.
                </p>
            </div>

            <div class="kpi-pill px-3 py-2 text-muted small">
                Showing <span class="fw-semibold">@((Pets?.Count ?? 0))</span> available pets
            </div>
        </div>

        <!-- Filter bar (UI only for now; we'll wire logic after) -->
        <div class="filter-card bg-white shadow-sm mt-4 p-3">
            <div class="row g-3 align-items-end">
                <div class="col-12 col-md-3">
                    <label class="form-label mb-1">Species</label>
                    <select class="form-select" disabled>
                        <option>All</option>
                        <option>Dog</option>
                        <option>Cat</option>
                        <option>Other</option>
                    </select>
                </div>

                <div class="col-12 col-md-3">
                    <label class="form-label mb-1">Size</label>
                    <select class="form-select" disabled>
                        <option>All</option>
                        <option>Small</option>
                        <option>Medium</option>
                        <option>Large</option>
                    </select>
                </div>

                <div class="col-12 col-md-4">
                    <label class="form-label mb-1">Search</label>
                    <input class="form-control" placeholder="Name, breed, temperament..." disabled />
                </div>

                <div class="col-12 col-md-2 d-grid">
                    <button class="btn btn-outline-secondary" disabled>Clear</button>
                </div>

                <div class="text-muted small mt-2">
                    * Filters will be connected after UI is locked in.
                </div>
            </div>
        </div>
    </div>

    @if (Pets == null)
    {
        <div class="text-muted">Loading...</div>
    }
    else if (Pets.Count == 0)
    {
        <div class="alert alert-info">No pets available right now.</div>
    }
    else
    {
        <div class="row g-4">
            @foreach (var p in Pets)
            {
                <div class="col-12 col-sm-6 col-lg-4">
                    <div class="card pet-card h-100 shadow-sm">
                        <!-- Image -->
                        <img class="pet-img"
                             src="@GetPetImageUrl(p.Id)"
                             alt="Pet photo" />

                        <div class="card-body">
                            <div class="d-flex justify-content-between align-items-start gap-2">
                                <div>
                                    <h5 class="mb-1 fw-semibold">@p.Name</h5>
                                    <div class="text-muted small">
                                        @p.Species
                                        @if (!string.IsNullOrWhiteSpace(p.Breed))
                                        {
                                            <span>• @p.Breed</span>
                                        }
                                        <span>• Age @p.Age</span>
                                    </div>
                                </div>

                                <span class="badge bg-success-subtle text-success border border-success-subtle status-badge">
                                    @p.Status
                                </span>
                            </div>

                            <div class="mt-3 d-flex flex-wrap gap-2">
                                <span class="tag-badge"><i class="bi bi-arrows-angle-expand me-1"></i>@p.Size</span>
                                <span class="tag-badge"><i class="bi bi-gender-ambiguous me-1"></i>@p.Gender</span>
                                @if (!string.IsNullOrWhiteSpace(p.Temperament))
                                {
                                    <span class="tag-badge"><i class="bi bi-emoji-smile me-1"></i>@p.Temperament</span>
                                }
                            </div>

                            @if (!string.IsNullOrWhiteSpace(p.Description))
                            {
                                <p class="text-muted small mt-3 mb-0">
                                    @(p.Description!.Length > 110 ? p.Description!.Substring(0, 110) + "…" : p.Description)
                                </p>
                            }
                        </div>

                        <div class="card-footer bg-white border-0 pt-0 pb-3 px-3">
                            <a class="btn btn-success w-100" href="@($"/pets/{p.Id}")">
                                View Details <i class="bi bi-arrow-right ms-1"></i>
                            </a>
                        </div>
                    </div>
                </div>
            }
        </div>
    }
</div>

@code {
    // Data store for pets from DB
    private List<Pet>? Pets;

    // Image lookup table: PetId -> ImageUrl
    private Dictionary<int, string> PetIdToImageUrl = new();

    protected override void OnInitialized()
    {
        // 1) Load available pets from DB
        Pets = Db.Pet
            .Where(p => p.Status == "Available")
            .ToList();

        // 2) Load one image per pet (first image)
        PetIdToImageUrl = Db.PetImage
            .GroupBy(i => i.PetId)
            .Select(g => g.OrderBy(i => i.Id).First())
            .ToDictionary(x => x.PetId, x => x.ImageUrl);
    }

    // Helper: choose image, fallback if missing
    private string GetPetImageUrl(int petId)
    {
        return PetIdToImageUrl.TryGetValue(petId, out var url) && !string.IsNullOrWhiteSpace(url)
            ? url
            : "https://images.unsplash.com/photo-1548199973-03cce0bbc87b?auto=format&fit=crop&w=1200&q=80";
    }
}
