@page "/admin"
@attribute [Microsoft.AspNetCore.Authorization.Authorize(Roles = "Administrator")]
@rendermode InteractiveServer
@layout PawPal.Components.Layout.PublicLayout

@using Microsoft.EntityFrameworkCore
@using PawPal.Data

@inject PawPalContext Db

<PageTitle>Admin Dashboard</PageTitle>

<div class="container py-4">

    <!-- Header (Browse Pets style) -->
    <div class="page-header p-4 p-md-5 mb-4">
        <div class="d-flex flex-column flex-md-row justify-content-between align-items-md-end gap-3">
            <div>
                <div class="text-muted small">PAWPAL • ADMIN</div>
                <h1 class="mb-2 fw-bold">Admin Dashboard</h1>
                <p class="text-muted mb-0">Overview of adoption activity and recent submissions.</p>
            </div>

            <div class="d-flex gap-2 flex-wrap">
                <a class="btn btn-success" href="/admin/applications">
                    <i class="bi bi-clipboard-check me-2"></i> Review Applications
                </a>
                <a class="btn btn-outline-success" href="/admin/users">
                    <i class="bi bi-people me-2"></i> Manage Users
                </a>
            </div>
        </div>

        <!-- KPI bar (like Browse Pets pill) -->
        <div class="filter-card bg-white shadow-sm mt-4 p-3">
            <div class="row g-3">
                <div class="col-12 col-md-4">
                    <div class="d-flex align-items-center justify-content-between">
                        <div>
                            <div class="text-muted small">Pending</div>
                            <div class="display-6 fw-bold mb-0">@PendingCount</div>
                            <div class="text-muted small">Needs review</div>
                        </div>
                        <div class="rounded-circle d-flex align-items-center justify-content-center"
                             style="width:46px;height:46px;background:#fff3cd;">
                            <i class="bi bi-hourglass-split text-warning"></i>
                        </div>
                    </div>
                </div>

                <div class="col-12 col-md-4">
                    <div class="d-flex align-items-center justify-content-between">
                        <div>
                            <div class="text-muted small">Approved</div>
                            <div class="display-6 fw-bold mb-0">@ApprovedCount</div>
                            <div class="text-muted small">Completed</div>
                        </div>
                        <div class="rounded-circle d-flex align-items-center justify-content-center"
                             style="width:46px;height:46px;background:#d1e7dd;">
                            <i class="bi bi-check2-circle text-success"></i>
                        </div>
                    </div>
                </div>

                <div class="col-12 col-md-4">
                    <div class="d-flex align-items-center justify-content-between">
                        <div>
                            <div class="text-muted small">Rejected</div>
                            <div class="display-6 fw-bold mb-0">@RejectedCount</div>
                            <div class="text-muted small">Closed</div>
                        </div>
                        <div class="rounded-circle d-flex align-items-center justify-content-center"
                             style="width:46px;height:46px;background:#f8d7da;">
                            <i class="bi bi-x-circle text-danger"></i>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    @if (Loading)
    {
        <div class="text-muted">Loading...</div>
    }
    else
    {
        <div class="card shadow-sm border-0">
            <div class="card-body">
                <div class="d-flex align-items-center justify-content-between flex-wrap gap-2">
                    <div>
                        <h5 class="mb-1 fw-bold">Recent Applications</h5>
                        <div class="text-muted small">Latest submissions.</div>
                    </div>
                    <div class="d-flex gap-2">
                        <a class="btn btn-sm btn-outline-success" href="/admin/applications">View all</a>
                    </div>
                </div>

                <div class="table-responsive mt-3">
                    <table class="table align-middle mb-0">
                        <thead class="table-light">
                            <tr>
                                <th style="min-width:240px;">Pet</th>
                                <th>Applicant</th>
                                <th>Submitted</th>
                                <th>Status</th>
                                <th class="text-end">Action</th>
                            </tr>
                        </thead>
                        <tbody>
                            @if (Recent.Count == 0)
                            {
                                <tr>
                                    <td colspan="5" class="text-center text-muted py-4">No applications yet.</td>
                                </tr>
                            }
                            else
                            {
                                @foreach (var r in Recent)
                                {
                                    <tr>
                                        <td class="fw-semibold">
                                            <div class="d-flex align-items-center gap-2">
                                                <img src="@GetPetImageUrl(r.PetId)"
                                                     alt="Pet"
                                                     style="width:36px;height:36px;border-radius:10px;object-fit:cover;border:1px solid #eee;" />
                                                <span>@r.PetName</span>
                                            </div>
                                        </td>
                                        <td class="text-muted">@r.ApplicantName</td>
                                        <td class="text-muted">@r.ApplicationDate.ToString("dd MMM yyyy, h:mm tt")</td>
                                        <td><span class="badge @StatusBadgeClass(r.Status)">@r.Status</span></td>
                                        <td class="text-end">
                                            <a class="btn btn-sm btn-outline-success"
                                               href="@($"/admin/applications/{r.ApplicationId}")">
                                                Review
                                            </a>
                                        </td>
                                    </tr>
                                }
                            }
                        </tbody>
                    </table>
                </div>

            </div>
        </div>
    }
</div>

@code {
    private bool Loading = true;

    private int PendingCount;
    private int ApprovedCount;
    private int RejectedCount;

    private List<RecentVm> Recent = new();

    protected override async Task OnInitializedAsync()
    {
        Loading = true;

        PendingCount = await Db.AdoptionApplication.CountAsync(a => a.Status == "Pending");
        ApprovedCount = await Db.AdoptionApplication.CountAsync(a => a.Status == "Approved");
        RejectedCount = await Db.AdoptionApplication.CountAsync(a => a.Status == "Rejected");

        Recent = await Db.AdoptionApplication.AsNoTracking()
            .OrderByDescending(a => a.ApplicationDate)
            .Join(Db.Pet.AsNoTracking(),
                a => a.PetId,
                p => p.Id,
                (a, p) => new RecentVm
                {
                    ApplicationId = a.Id,
                    PetId = p.Id,
                    PetName = p.Name,
                    ApplicantName = a.FullName ?? "(No name)",
                    ApplicationDate = a.ApplicationDate,
                    Status = a.Status
                })
            .Take(8)
            .ToListAsync();

        Loading = false;
    }

    private string StatusBadgeClass(string? status) => (status ?? "").ToLower() switch
    {
        "pending" => "bg-warning text-dark",
        "approved" => "bg-success",
        "rejected" => "bg-danger",
        _ => "bg-secondary"
    };

    private string GetPetImageUrl(int petId) => petId switch
    {
        1 => "https://images.unsplash.com/photo-1548199973-03cce0bbc87b?auto=format&fit=crop&w=300&q=70",
        2 => "https://images.unsplash.com/photo-1517849845537-4d257902454a?auto=format&fit=crop&w=300&q=70",
        3 => "https://images.unsplash.com/photo-1592194996308-7b43878e84a6?auto=format&fit=crop&w=300&q=70",
        4 => "https://images.unsplash.com/photo-1543852786-1cf6624b9987?auto=format&fit=crop&w=300&q=70",
        _ => "https://images.unsplash.com/photo-1518717758536-85ae29035b6d?auto=format&fit=crop&w=300&q=70"
    };

    private class RecentVm
    {
        public int ApplicationId { get; set; }
        public int PetId { get; set; }
        public string PetName { get; set; } = "";
        public string ApplicantName { get; set; } = "";
        public DateTime ApplicationDate { get; set; }
        public string Status { get; set; } = "";
    }
}
