@page "/apply/{PetId:int}"
@rendermode InteractiveServer
@layout PublicLayout
@using PawPal.Components.Layout

@using Microsoft.AspNetCore.Identity
@using Microsoft.EntityFrameworkCore
@using Microsoft.AspNetCore.Components.Authorization
@using System.ComponentModel.DataAnnotations
@using PawPal.Data
@using PawPal.Domain

@inject PawPalContext Db
@inject NavigationManager Nav
@inject UserManager<PawPalUser> UserManager
@inject AuthenticationStateProvider AuthStateProvider

<PageTitle>Adoption Application</PageTitle>

<div class="container-xl py-4">
    <div class="d-flex align-items-center justify-content-between flex-wrap gap-2 mb-3">
        <div>
            <a class="text-decoration-none text-success fw-semibold" href="/pets">← Back to Browse</a>
            <h2 class="mt-2 mb-0 fw-bold">Adoption Application</h2>
            <div class="text-muted">Please fill in the form. The shelter will review your application.</div>
        </div>

        @if (Pet != null)
        {
            <span class="badge rounded-pill @(Pet.Status == "Available" ? "text-bg-success" : "text-bg-secondary") px-3 py-2">
                @Pet.Status
            </span>
        }
    </div>

    @if (Pet == null)
    {
        <div class="text-muted">Loading...</div>
    }
    else
    {
        <div class="row g-4">
            <!-- LEFT: Pet Summary -->
            <div class="col-12 col-lg-5">
                <div class="card shadow-sm border-0 sticky-lg-top" style="top: 90px;">
                    <img src="@PetImageUrl" class="card-img-top" style="height:260px; object-fit:cover;" alt="Pet photo" />
                    <div class="card-body">
                        <h4 class="fw-bold mb-1">@Pet.Name</h4>
                        <div class="text-muted mb-3">
                            @Pet.Species
                            @if (!string.IsNullOrWhiteSpace(Pet.Breed))
                            {
                                <span>• @Pet.Breed</span>
                            }
                            <span>• Age @Pet.Age</span>
                        </div>

                        <div class="d-flex flex-wrap gap-2 mb-3">
                            @if (!string.IsNullOrWhiteSpace(Pet.Size))
                            {
                                <span class="badge bg-light text-dark border">Size: @Pet.Size</span>
                            }
                            @if (!string.IsNullOrWhiteSpace(Pet.Gender))
                            {
                                <span class="badge bg-light text-dark border">Gender: @Pet.Gender</span>
                            }
                            @if (!string.IsNullOrWhiteSpace(Pet.Temperament))
                            {
                                <span class="badge bg-light text-dark border">@Pet.Temperament</span>
                            }
                        </div>

                        @if (!string.IsNullOrWhiteSpace(Pet.Description))
                        {
                            <div class="mb-3">
                                <div class="fw-semibold">About</div>
                                <div class="text-muted">@Pet.Description</div>
                            </div>
                        }

                        @if (!string.IsNullOrWhiteSpace(Pet.MedicalInfo))
                        {
                            <div>
                                <div class="fw-semibold">Medical Info</div>
                                <div class="text-muted">@Pet.MedicalInfo</div>
                            </div>
                        }
                    </div>
                </div>
            </div>

            <!-- RIGHT: Application Form -->
            <div class="col-12 col-lg-7">
                <div class="card shadow-sm border-0">
                    <div class="card-body p-4">
                        <h4 class="fw-bold mb-1">Applicant Details</h4>
                        <div class="text-muted mb-3">All fields help the shelter assess suitability and readiness.</div>

                        @if (!string.IsNullOrEmpty(Error))
                        {
                            <div class="alert alert-danger">@Error</div>
                        }
                        @if (Success)
                        {
                            <div class="alert alert-success">
                                Application submitted! Track it in <a class="fw-semibold" href="/my-applications">My Applications</a>.
                            </div>
                        }

                        <EditForm Model="Form" OnValidSubmit="SubmitAsync">
                            <DataAnnotationsValidator />
                            <ValidationSummary class="text-danger" />

                            <!-- Section 1: Contact -->
                            <div class="row g-3">
                                <div class="col-12 col-md-6">
                                    <label class="form-label">Full Name</label>
                                    <InputText class="form-control" @bind-Value="Form.FullName" />
                                </div>

                                <div class="col-12 col-md-6">
                                    <label class="form-label">Phone Number</label>
                                    <InputText class="form-control" @bind-Value="Form.PhoneNumber" />
                                </div>

                                <div class="col-12">
                                    <label class="form-label">Home Address</label>
                                    <InputText class="form-control" @bind-Value="Form.Address" />
                                </div>

                                <div class="col-12 col-md-6">
                                    <label class="form-label">Housing Type</label>
                                    <select class="form-select" @bind="Form.HousingType">
                                        <option value="">Select...</option>
                                        <option>HDB</option>
                                        <option>Condo</option>
                                        <option>Landed</option>
                                        <option>Rental</option>
                                    </select>
                                </div>

                                <div class="col-12 col-md-6">
                                    <label class="form-label">Average hours pet will be alone (per day)</label>
                                    <InputNumber class="form-control" @bind-Value="Form.AvgHoursAlone" />
                                </div>

                                <div class="col-12 col-md-6">
                                    <div class="form-check mt-2">
                                        <InputCheckbox class="form-check-input" @bind-Value="Form.HasLandlordOrFamilyApproval" />
                                        <label class="form-check-label">Landlord / family approval obtained</label>
                                    </div>
                                </div>

                                <div class="col-12 col-md-6">
                                    <div class="form-check mt-2">
                                        <InputCheckbox class="form-check-input" @bind-Value="Form.AnyoneAllergic" />
                                        <label class="form-check-label">Someone at home is allergic to pets</label>
                                    </div>
                                </div>

                                <div class="col-12 col-md-6">
                                    <div class="form-check mt-2">
                                        <InputCheckbox class="form-check-input" @bind-Value="Form.CurrentlyOwnPets" />
                                        <label class="form-check-label">I currently own pets</label>
                                    </div>
                                </div>

                                @if (Form.CurrentlyOwnPets)
                                {
                                    <div class="col-12">
                                        <label class="form-label">Current pets (type / number)</label>
                                        <InputTextArea class="form-control" rows="3" @bind-Value="Form.CurrentPetsDetails" />
                                    </div>
                                }

                                <div class="col-12">
                                    <label class="form-label">Briefly describe your pet experience</label>
                                    <InputTextArea class="form-control" rows="3" @bind-Value="Form.PetExperienceDetails" />
                                </div>

                                <div class="col-12">
                                    <label class="form-label">Why do you want to adopt?</label>
                                    <InputTextArea class="form-control" rows="4" @bind-Value="Form.ReasonForAdoption" />
                                </div>

                                <div class="col-12 col-md-6">
                                    <label class="form-label">Primary caregiver</label>
                                    <InputText class="form-control" @bind-Value="Form.PrimaryCaregiver" />
                                </div>

                                <div class="col-12 col-md-6">
                                    <div class="form-check mt-4">
                                        <InputCheckbox class="form-check-input" @bind-Value="Form.PreparedForVetCare" />
                                        <label class="form-check-label">Prepared for vet care costs</label>
                                    </div>
                                </div>
                            </div>

                        </EditForm>
                    </div>
                </div>
            </div>
        </div>
    }
</div>

@code {
    [Parameter] public int PetId { get; set; }

    private Pet? Pet;
    private string PetImageUrl = "https://images.unsplash.com/photo-1548199973-03cce0bbc87b?auto=format&fit=crop&w=1400&q=80";

    private bool Submitting;
    private bool Success;
    private string? Error;

    private ApplyFormModel Form = new();

    protected override async Task OnInitializedAsync()
    {
        var auth = await AuthStateProvider.GetAuthenticationStateAsync();
        if (auth.User?.Identity?.IsAuthenticated != true)
        {
            Nav.NavigateTo($"/Account/Login?returnUrl=/apply/{PetId}", true);
            return;
        }

        Pet = await Db.Pet.FirstOrDefaultAsync(p => p.Id == PetId);
        if (Pet == null) return;

        PetImageUrl = PetId switch
        {
            1 => "https://images.unsplash.com/photo-1548199973-03cce0bbc87b?auto=format&fit=crop&w=1400&q=80",
            2 => "https://images.unsplash.com/photo-1517849845537-4d257902454a?auto=format&fit=crop&w=1400&q=80",
            _ => "https://images.unsplash.com/photo-1518717758536-85ae29035b6d?auto=format&fit=crop&w=1400&q=80",
        };
    }

    private async Task SubmitAsync()
    {
        Error = null;
        Success = false;
        Submitting = true;

        try
        {
            var auth = await AuthStateProvider.GetAuthenticationStateAsync();
            var principal = auth.User;

            if (principal?.Identity?.IsAuthenticated != true)
            {
                Nav.NavigateTo($"/Account/Login?returnUrl=/apply/{PetId}", true);
                return;
            }

            var appUser = await UserManager.GetUserAsync(principal);
            if (appUser == null) { Error = "Unable to load user."; return; }

            var application = new AdoptionApplication
            {
                PetId = PetId,
                AdopterId = appUser.Id,
                ApplicationDate = DateTime.Now,
                Status = "Pending",

                FullName = Form.FullName,
                PhoneNumber = Form.PhoneNumber,
                Address = Form.Address,

                HousingType = Form.HousingType,
                HasLandlordOrFamilyApproval = Form.HasLandlordOrFamilyApproval,
                AnyoneAllergic = Form.AnyoneAllergic,
                AvgHoursAlone = Form.AvgHoursAlone,

                CurrentlyOwnPets = Form.CurrentlyOwnPets,
                CurrentPetsDetails = Form.CurrentPetsDetails,
                PetExperienceDetails = Form.PetExperienceDetails,

                ReasonForAdoption = Form.ReasonForAdoption,
                PrimaryCaregiver = Form.PrimaryCaregiver,
                PreparedForVetCare = Form.PreparedForVetCare
            };

            Db.AdoptionApplication.Add(application);
            await Db.SaveChangesAsync();



            Db.AdoptionApplication.Add(application); // if your DbSet is singular; if plural, change accordingly
            await Db.SaveChangesAsync();

            Success = true;
        }
        catch (Exception ex)
        {
            Error = ex.Message;
        }
        finally
        {
            Submitting = false;
        }
    }

    private class ApplyFormModel
    {
        public string FullName { get; set; } = "";
        public string PhoneNumber { get; set; } = "";
        public string Address { get; set; } = "";

        public string HousingType { get; set; } = "";
        public bool HasLandlordOrFamilyApproval { get; set; }
        public bool AnyoneAllergic { get; set; }
        public int AvgHoursAlone { get; set; } = 0;

        public bool CurrentlyOwnPets { get; set; }
        public string? CurrentPetsDetails { get; set; }
        public string? PetExperienceDetails { get; set; }

        public string ReasonForAdoption { get; set; } = "";
        public string PrimaryCaregiver { get; set; } = "";
        public bool PreparedForVetCare { get; set; }
    }

}
