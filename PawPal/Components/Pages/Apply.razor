@* 
@page "/apply/{PetId:int}"
@rendermode InteractiveServer
@layout PawPal.Components.Layout.PublicLayout

@using Microsoft.AspNetCore.Identity
@using Microsoft.EntityFrameworkCore
@using PawPal.Data
@using PawPal.Domain

@inject PawPalContext Db
@inject NavigationManager Nav
@inject UserManager<PawPalUser> UserManager
@inject AuthenticationStateProvider AuthStateProvider

<PageTitle>Apply to Adopt</PageTitle>

<div class="page-hero py-4">
    <div class="container-xl">
        <div class="d-flex align-items-center justify-content-between flex-wrap gap-2">
            <div>
                <a class="text-decoration-none" href="/pets">← Back to Browse</a>
                <h1 class="mt-2 mb-1" style="font-weight:800;">Adoption Application</h1>
                <div class="text-muted">You only need an account to submit an application.</div>
            </div>
            <span class="badge rounded-pill text-bg-success px-3 py-2">@Pet?.Status</span>
        </div>
    </div>
</div>

<div class="container-xl py-4">
    @if (Pet == null)
    {
        <div class="text-muted">Loading...</div>
    }
    else
    {
        <div class="row g-4">
            <!-- LEFT: Pet summary -->
            <div class="col-12 col-lg-5">
                <div class="hero-card">
                    <img class="pet-thumb" src="@PetImageUrl" alt="Pet photo" />
                    <div class="p-4">
                        <h3 class="mb-1" style="font-weight:800;">@Pet.Name</h3>
                        <div class="text-muted">@Pet.Species @if(!string.IsNullOrWhiteSpace(Pet.Breed)){
                        <span>• @Pet.Breed</span>
                    }
 • Age @Pet.Age</div>

                    <div class="d-flex flex-wrap gap-2 mt-3">
                        @if (!string.IsNullOrWhiteSpace(Pet.Size))
                        {
                            <span class="badge text-bg-light border">Size: @Pet.Size</span>
                        }
                        @if (!string.IsNullOrWhiteSpace(Pet.Gender))
                        {
                            <span class="badge text-bg-light border">Gender: @Pet.Gender</span>
                        }
                        @if (!string.IsNullOrWhiteSpace(Pet.Temperament))
                        {
                            <span class="badge text-bg-light border">@Pet.Temperament</span>
                        }
                    </div>

                    @if (!string.IsNullOrWhiteSpace(Pet.Description))
                    {
                        <div class="mt-3 section-card p-3">
                            <div class="fw-semibold mb-1">About</div>
                            <div class="text-muted">@Pet.Description</div>
                        </div>
                    }

                    @if (!string.IsNullOrWhiteSpace(Pet.MedicalInfo))
                    {
                        <div class="mt-3 section-card p-3">
                            <div class="fw-semibold mb-1">Medical Info</div>
                            <div class="text-muted">@Pet.MedicalInfo</div>
                        </div>
                    }
                </div>
            </div>
        </div>

        <!-- RIGHT: Application form -->
        <div class="col-12 col-lg-7">
            <div class="section-card p-4">
                <h4 class="mb-1" style="font-weight:800;">Your Details</h4>
                <div class="helper mb-3">Fill in the form below. The shelter will review and get back to you.</div>

                @if (!string.IsNullOrEmpty(Error))
                {
                    <div class="alert alert-danger">@Error</div>
                }
                @if (Success)
                {
                    <div class="alert alert-success">
                        Application submitted! You can track it in <a href="/my-applications">My Applications</a>.
                    </div>
                }

                <EditForm Model="Form" OnValidSubmit="SubmitAsync">
                    <DataAnnotationsValidator />
                    <ValidationSummary />

                    <div class="row g-3">
                        <div class="col-12 col-md-6">
                            <label class="form-label">Full Name</label>
                            <InputText class="form-control" @bind-Value="Form.FullName" />
                        </div>

                        <div class="col-12 col-md-6">
                            <label class="form-label">Phone Number</label>
                            <InputText class="form-control" @bind-Value="Form.PhoneNumber" />
                        </div>

                        <div class="col-12">
                            <label class="form-label">Home Address</label>
                            <InputText class="form-control" @bind-Value="Form.Address" />
                        </div>

                        <div class="col-12">
                            <label class="form-label">Why do you want to adopt @Pet.Name?</label>
                            <InputTextArea class="form-control" rows="4" @bind-Value="Form.Reason" />
                        </div>

                        <div class="col-12">
                            <label class="form-label">Do you have experience with pets?</label>
                            <InputTextArea class="form-control" rows="3" @bind-Value="Form.Experience" />
                        </div>
                    </div>

                    <div class="d-flex align-items-center justify-content-between mt-4 flex-wrap gap-2">
                        <div class="helper">By submitting, you confirm your details are accurate.</div>
                        <button class="btn btn-success px-4" type="submit" disabled="@Submitting">
                            @(Submitting ? "Submitting..." : "Submit Application")
                        </button>
                    </div>
                </EditForm>
            </div>
        </div>
    </div>
        }
</div>

@code {
    [Parameter] public int PetId { get; set; }

    private Pet? Pet;
    private string PetImageUrl = "https://images.unsplash.com/photo-1548199973-03cce0bbc87b?auto=format&fit=crop&w=1400&q=80";

    private bool Submitting;
    private bool Success;
    private string? Error;

    private ApplyFormModel Form = new();

    protected override async Task OnInitializedAsync()
    {
        Pet = await Db.Pet.FirstOrDefaultAsync(p => p.Id == PetId);
        if (Pet == null) return;

        // Simple, safe “nice image” mapping without errors
        PetImageUrl = PetId switch
        {
            1 => "https://images.unsplash.com/photo-1548199973-03cce0bbc87b?auto=format&fit=crop&w=1400&q=80",
            2 => "https://images.unsplash.com/photo-1517849845537-4d257902454a?auto=format&fit=crop&w=1400&q=80",
            _ => "https://images.unsplash.com/photo-1518717758536-85ae29035b6d?auto=format&fit=crop&w=1400&q=80",
        };
    }

    private async Task SubmitAsync()
    {
        Error = null;
        Success = false;
        Submitting = true;

        try
        {
            var auth = await AuthStateProvider.GetAuthenticationStateAsync();
            var user = auth.User;

            if (user?.Identity?.IsAuthenticated != true)
            {
                Nav.NavigateTo($"/account/login?returnUrl=/apply/{PetId}");
                return;
            }

            // If you already have working submit logic, keep it and just keep the UI.
            // Below is a typical insert pattern; adjust fields to your AdoptionApplication entity.

            var appUser = await UserManager.GetUserAsync(user);
            if (appUser == null) { Error = "Unable to load user."; return; }

            var application = new AdoptionApplication
            {
                PetId = PetId,
                AdopterId = ,
                ApplicationDate = DateTime.Now,
                Status = "Pending",
                Remarks = $"{Form.FullName} | {Form.PhoneNumber} | {Form.Address} | Reason: {Form.Reason} | Exp: {Form.Experience}"
            };

            Db.AdoptionApplication.Add(application);
            await Db.SaveChangesAsync();

            Success = true;
        }
        catch (Exception ex)
        {
            Error = ex.Message;
        }
        finally
        {
            Submitting = false;
        }
    }

    private class ApplyFormModel
    {
        public string FullName { get; set; } = "";
        public string PhoneNumber { get; set; } = "";
        public string Address { get; set; } = "";
        public string Reason { get; set; } = "";
        public string Experience { get; set; } = "";
    }
} *@
