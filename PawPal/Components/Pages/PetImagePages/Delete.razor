@page "/petimages/delete"
@using Microsoft.EntityFrameworkCore
@using PawPal.Domain
@inject IDbContextFactory<PawPal.Data.PawPalContext> DbFactory
@inject NavigationManager NavigationManager

<PageTitle>Delete</PageTitle>

<h1>Delete</h1>

<p>Are you sure you want to delete this?</p>
<div>
    <h2>PetImage</h2>
    <hr />
    @if (petimage is null)
    {
        <p><em>Loading...</em></p>
    }
    else {
        <dl class="row">
            <dt class="col-sm-2">PetId</dt>
            <dd class="col-sm-10">@petimage.PetId</dd>
        </dl>
        <dl class="row">
            <dt class="col-sm-2">ImageUrl</dt>
            <dd class="col-sm-10">@petimage.ImageUrl</dd>
        </dl>
        <dl class="row">
            <dt class="col-sm-2">IsPrimary</dt>
            <dd class="col-sm-10">@petimage.IsPrimary</dd>
        </dl>
        <dl class="row">
            <dt class="col-sm-2">DateCreated</dt>
            <dd class="col-sm-10">@petimage.DateCreated</dd>
        </dl>
        <dl class="row">
            <dt class="col-sm-2">DateUpdated</dt>
            <dd class="col-sm-10">@petimage.DateUpdated</dd>
        </dl>
        <dl class="row">
            <dt class="col-sm-2">CreatedBy</dt>
            <dd class="col-sm-10">@petimage.CreatedBy</dd>
        </dl>
        <dl class="row">
            <dt class="col-sm-2">UpdatedBy</dt>
            <dd class="col-sm-10">@petimage.UpdatedBy</dd>
        </dl>
        <EditForm method="post" Model="petimage" OnValidSubmit="DeletePetImage" FormName="delete" Enhance>
            <button type="submit" class="btn btn-danger" disabled="@(petimage is null)">Delete</button> |
            <a href="/petimages">Back to List</a>
        </EditForm>
    }
</div>

@code {
    private PetImage? petimage;

    [SupplyParameterFromQuery]
    private int Id { get; set; }

    protected override async Task OnInitializedAsync()
    {
        using var context = DbFactory.CreateDbContext();
        petimage = await context.PetImage.FirstOrDefaultAsync(m => m.Id == Id);

        if (petimage is null)
        {
            NavigationManager.NavigateTo("notfound");
        }
    }

    private async Task DeletePetImage()
    {
        using var context = DbFactory.CreateDbContext();
        context.PetImage.Remove(petimage!);
        await context.SaveChangesAsync();
        NavigationManager.NavigateTo("/petimages");
    }
}
