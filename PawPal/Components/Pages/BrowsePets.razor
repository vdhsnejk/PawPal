@page "/pets"
@using Microsoft.EntityFrameworkCore
@using PawPal.Domain
@inject PawPal.Data.PawPalContext Db

<PageTitle>Browse Pets</PageTitle>

<div class="container py-4">

    <div class="page-header p-4 p-md-5 mb-4">
        <div class="d-flex flex-column flex-md-row justify-content-between align-items-md-end gap-3">
            <div>
                <h1 class="mb-2 fw-bold">Browse Pets</h1>
                <p class="text-muted mb-0">
                    Explore adoptable pets from trusted shelters. No account needed to browse.
                </p>
            </div>

            <div class="kpi-pill px-3 py-2 text-muted small">
                Showing <span class="fw-semibold">@FilteredPets.Count</span> available pets
            </div>
        </div>

        <div class="filter-card bg-white shadow-sm mt-4 p-3">
            <div class="row g-3 align-items-end">
                <div class="col-12 col-md-3">
                    <label class="form-label mb-1">Species</label>
                    <select class="form-select" @bind="SpeciesFilter">
                        <option value="All">All</option>
                        @foreach (var s in SpeciesOptions)
                        {
                            <option value="@s">@s</option>
                        }
                    </select>
                </div>

                <div class="col-12 col-md-3">
                    <label class="form-label mb-1">Size</label>
                    <select class="form-select" @bind="SizeFilter">
                        <option value="All">All</option>
                        @foreach (var s in SizeOptions)
                        {
                            <option value="@s">@s</option>
                        }
                    </select>
                </div>

                <div class="col-12 col-md-4">
                    <label class="form-label mb-1">Search</label>
                    <input class="form-control"
                           placeholder="Name, breed, temperament..."
                           @bind="SearchTerm"
                           @bind:event="oninput" />
                </div>

                <div class="col-12 col-md-2 d-grid">
                    <button class="btn btn-outline-secondary" @onclick="ClearFilters">Clear</button>
                </div>
            </div>
        </div>
    </div>

    @if (Loading)
    {
        <div class="text-muted">Loading...</div>
    }
    else if (FilteredPets.Count == 0)
    {
        <div class="alert alert-info">No pets found for the selected filters.</div>
    }
    else
    {
        <div class="row g-4">
            @foreach (var p in FilteredPets)
            {
                <div class="col-12 col-sm-6 col-lg-4">
                    <div class="card pet-card h-100 shadow-sm">
                        <img class="pet-img"
                             src="@GetPetImageUrl(p)"
                             alt="Pet photo"
                             onerror="this.onerror=null;this.src=this.dataset.fallback;"
                             data-fallback="@GetFallbackBySpecies(p.Species)" />

                        <div class="card-body">
                            <div class="d-flex justify-content-between align-items-start gap-2">
                                <div>
                                    <h5 class="mb-1 fw-semibold">@p.Name</h5>
                                    <div class="text-muted small">
                                        @p.Species
                                        @if (!string.IsNullOrWhiteSpace(p.Breed))
                                        {
                                            <span>• @p.Breed</span>
                                        }
                                        <span>• Age @p.Age</span>
                                    </div>
                                </div>

                                <span class="badge bg-success-subtle text-success border border-success-subtle status-badge">
                                    @p.Status
                                </span>
                            </div>

                            <div class="mt-3 d-flex flex-wrap gap-2">
                                @if (!string.IsNullOrWhiteSpace(p.Size))
                                {
                                    <span class="tag-badge"><i class="bi bi-arrows-angle-expand me-1"></i>@p.Size</span>
                                }
                                @if (!string.IsNullOrWhiteSpace(p.Gender))
                                {
                                    <span class="tag-badge"><i class="bi bi-gender-ambiguous me-1"></i>@p.Gender</span>
                                }
                                @if (!string.IsNullOrWhiteSpace(p.Temperament))
                                {
                                    <span class="tag-badge"><i class="bi bi-emoji-smile me-1"></i>@p.Temperament</span>
                                }
                            </div>

                            @if (!string.IsNullOrWhiteSpace(p.Description))
                            {
                                <p class="text-muted small mt-3 mb-0">
                                    @(p.Description!.Length > 110 ? p.Description!.Substring(0, 110) + "…" : p.Description)
                                </p>
                            }
                        </div>

                        <div class="card-footer bg-white border-0 pt-0 pb-3 px-3">
                            <a class="btn btn-success w-100" href="@($"/pets/{p.Id}")">
                                View Details <i class="bi bi-arrow-right ms-1"></i>
                            </a>
                        </div>
                    </div>
                </div>
            }
        </div>
    }
</div>

@code {
    private bool Loading = true;

    private List<Pet> Pets = new();
    private List<Pet> FilteredPets = new();

    private List<string> SpeciesOptions = new();
    private List<string> SizeOptions = new();

    private string SpeciesFilter = "All";
    private string SizeFilter = "All";
    private string SearchTerm = "";

    private Dictionary<int, string> PetIdToImageUrl = new();

    protected override async Task OnInitializedAsync()
    {
        Loading = true;

        // Load pets
        Pets = await Db.Pet
            .AsNoTracking()
            .Where(p => p.Status == "Available")
            .OrderBy(p => p.Name)
            .ToListAsync();

        // Load one image per pet (first image)
        PetIdToImageUrl = await Db.PetImage
            .AsNoTracking()
            .GroupBy(i => i.PetId)
            .Select(g => g.OrderBy(i => i.Id).First())
            .ToDictionaryAsync(x => x.PetId, x => x.ImageUrl);

        // Build dropdown options from your real DB values
        SpeciesOptions = Pets
            .Select(p => (p.Species ?? "").Trim())
            .Where(s => !string.IsNullOrWhiteSpace(s))
            .Distinct(StringComparer.OrdinalIgnoreCase)
            .OrderBy(s => s)
            .ToList();

        SizeOptions = Pets
            .Select(p => (p.Size ?? "").Trim())
            .Where(s => !string.IsNullOrWhiteSpace(s))
            .Distinct(StringComparer.OrdinalIgnoreCase)
            .OrderBy(s => s)
            .ToList();

        ApplyFilters();
        Loading = false;
    }

    // Re-filter automatically when any bound filter changes
    protected override void OnParametersSet()
    {
        ApplyFilters();
    }

    private void ApplyFilters()
    {
        IEnumerable<Pet> q = Pets;

        if (SpeciesFilter != "All")
        {
            q = q.Where(p => ((p.Species ?? "").Trim())
                .Contains(SpeciesFilter, StringComparison.OrdinalIgnoreCase));
        }

        if (SizeFilter != "All")
        {
            q = q.Where(p => ((p.Size ?? "").Trim())
                .Contains(SizeFilter, StringComparison.OrdinalIgnoreCase));
        }

        if (!string.IsNullOrWhiteSpace(SearchTerm))
        {
            var term = SearchTerm.Trim();
            q = q.Where(p =>
                (p.Name ?? "").Contains(term, StringComparison.OrdinalIgnoreCase) ||
                (p.Breed ?? "").Contains(term, StringComparison.OrdinalIgnoreCase) ||
                (p.Temperament ?? "").Contains(term, StringComparison.OrdinalIgnoreCase) ||
                (p.Description ?? "").Contains(term, StringComparison.OrdinalIgnoreCase) ||
                (p.Species ?? "").Contains(term, StringComparison.OrdinalIgnoreCase)
            );
        }

        FilteredPets = q.ToList();
    }

    private void ClearFilters()
    {
        SpeciesFilter = "All";
        SizeFilter = "All";
        SearchTerm = "";
        ApplyFilters();
    }

    private string GetPetImageUrl(Pet p)
    {
        if (PetIdToImageUrl.TryGetValue(p.Id, out var url))
        {
            url = (url ?? "").Trim();
            if (url.StartsWith("http://", StringComparison.OrdinalIgnoreCase) ||
                url.StartsWith("https://", StringComparison.OrdinalIgnoreCase))
            {
                return url;
            }
        }
        return GetFallbackBySpecies(p.Species);
    }

    private string GetFallbackBySpecies(string? species)
    {
        var s = (species ?? "").Trim().ToLower();

        if (s.Contains("cat"))
            return "https://images.unsplash.com/photo-1518791841217-8f162f1e1131?auto=format&fit=crop&w=1200&q=80";

        if (s.Contains("dog"))
            return "https://images.unsplash.com/photo-1517849845537-4d257902454a?auto=format&fit=crop&w=1200&q=80";

        return "https://images.unsplash.com/photo-1450778869180-41d0601e046e?auto=format&fit=crop&w=1200&q=80";
    }
}
