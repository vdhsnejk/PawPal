@* @page "/admin/applications"
@attribute [Microsoft.AspNetCore.Authorization.Authorize(Roles = "Administrator")]
@rendermode InteractiveServer
@layout PawPal.Components.Layout.PublicLayout

@using Microsoft.AspNetCore.Identity
@using Microsoft.EntityFrameworkCore
@using PawPal.Data
@using PawPal.Domain

@inject PawPalContext Db

<PageTitle>Admin - Applications</PageTitle>

<div class="container-xl py-4">
    <div class="d-flex align-items-center justify-content-between flex-wrap gap-2 mb-3">
        <div>
            <h1 class="mb-1" style="font-weight:800;">Admin: Adoption Applications</h1>
            <div class="text-muted">Review and update adoption applications.</div>
        </div>
    </div>

    <div class="card shadow-sm border-0 mb-3">
        <div class="card-body">
            <div class="row g-2 align-items-end">
                <div class="col-12 col-md-3">
                    <label class="form-label small text-muted">Status</label>
                    <select class="form-select" value="@StatusFilter" @onchange="OnStatusChanged">
                        <option value="All">All</option>
                        <option value="Pending">Pending</option>
                        <option value="Approved">Approved</option>
                        <option value="Rejected">Rejected</option>
                    </select>
                </div>

                <div class="col-12 col-md-6">
                    <label class="form-label small text-muted">Search</label>
                    <input class="form-control"
                           placeholder="Search by pet name or applicant..."
                           value="@SearchTerm"
                           @oninput="OnSearchTyping" />
                </div>

                <div class="col-12 col-md-3 d-flex gap-2">
                    <button class="btn btn-success w-100" @onclick="LoadAsync">Search</button>
                    <button class="btn btn-outline-secondary w-100" @onclick="ClearFilters">Clear</button>
                </div>
            </div>
        </div>
    </div>

    @if (Loading)
    {
        <div class="text-muted">Loading...</div>
    }
    else if (Rows.Count == 0)
    {
        <div class="alert alert-info">No applications found.</div>
    }
    else
    {
        <div class="card shadow-sm border-0">
            <div class="table-responsive">
                <table class="table align-middle mb-0">
                    <thead class="table-light">
                        <tr>
                            <th>Pet</th>
                            <th>Submitted</th>
                            <th>Status</th>
                            <th style="min-width:320px;">Admin Remarks</th>
                            <th class="text-end">Action</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var r in Rows)
                        {
                            <tr>
                                <td class="fw-semibold">@r.PetName</td>
                                <td class="text-muted">@r.ApplicationDate.ToString("dd MMM yyyy, h:mm tt")</td>
                                <td><span class="badge @StatusBadgeClass(r.Status)">@r.Status</span></td>
                                <td class="text-muted">@r.AdminRemarks</td>
                                <td class="text-end">
                                    <button class="btn btn-sm btn-outline-success" @onclick="() => OpenReview(r.ApplicationId)">
                                        Review
                                    </button>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    }
</div>

@if (ShowModal)
{
    <div class="modal fade show d-block" tabindex="-1" style="background:rgba(0,0,0,.5);">
        <div class="modal-dialog modal-lg modal-dialog-centered">
            <div class="modal-content border-0 shadow">
                <div class="modal-header">
                    <h5 class="modal-title fw-bold">Review Application</h5>
                    <button type="button" class="btn-close" @onclick="CloseModal"></button>
                </div>
                <div class="modal-body">
                    @if (Selected == null)
                    {
                        <div class="text-muted">Loading...</div>
                    }
                    else
                    {
                        <div class="row g-3">
                            <div class="col-12 col-lg-5">
                                <div class="card border-0 bg-light">
                                    <div class="card-body">
                                        <div class="fw-semibold mb-1">Pet</div>
                                        <div class="fs-5 fw-bold">@Selected.PetName</div>
                                        <div class="text-muted small">Submitted @Selected.ApplicationDate.ToString("dd MMM yyyy, h:mm tt")</div>
                                    </div>
                                </div>
                            </div>

                            <div class="col-12 col-lg-7">
                                <div class="mb-3">
                                    <label class="form-label fw-semibold">Status</label>
                                    <select class="form-select" @bind="EditStatus">
                                        <option value="Pending">Pending</option>
                                        <option value="Approved">Approved</option>
                                        <option value="Rejected">Rejected</option>
                                    </select>
                                </div>

                                <div class="mb-3">
                                    <label class="form-label fw-semibold">Admin Remarks</label>
                                    <textarea class="form-control" rows="5" @bind="EditRemarks"></textarea>
                                </div>

                                <div class="d-flex justify-content-end gap-2">
                                    <button class="btn btn-outline-secondary" @onclick="CloseModal">Cancel</button>
                                    <button class="btn btn-success" @onclick="SaveAsync" disabled="@Saving">
                                        @(Saving ? "Saving..." : "Save")
                                    </button>
                                </div>

                                @if (!string.IsNullOrWhiteSpace(SaveError))
                                {
                                    <div class="alert alert-danger mt-3">@SaveError</div>
                                }
                            </div>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
}

@code {
    private bool Loading = true;
    private string StatusFilter = "All";
    private string SearchTerm = "";
    private List<RowVm> Rows = new();

    private bool ShowModal;
    private bool Saving;
    private string? SaveError;

    private RowVm? Selected;
    private int SelectedId;
    private string EditStatus = "Pending";
    private string EditRemarks = "";

    protected override async Task OnInitializedAsync()
    {
        await LoadAsync();
    }

    private async Task LoadAsync()
    {
        Loading = true;
        Rows.Clear();

        var q = Db.AdoptionApplication.AsNoTracking()
            .Join(Db.Pet.AsNoTracking(),
                a => a.PetId,
                p => p.Id,
                (a, p) => new RowVm
                {
                    ApplicationId = a.Id,
                    PetName = p.Name,
                    ApplicationDate = a.ApplicationDate,
                    Status = a.Status,
                    AdminRemarks = a.AdminRemarks ?? ""
                });

        if (StatusFilter != "All")
            q = q.Where(x => x.Status == StatusFilter);

        if (!string.IsNullOrWhiteSpace(SearchTerm))
        {
            var term = SearchTerm.Trim();
            q = q.Where(x => x.PetName.Contains(term) || x.AdminRemarks.Contains(term));
        }

        Rows = await q.OrderByDescending(x => x.ApplicationDate).ToListAsync();
        Loading = false;
    }

    private async Task OnStatusChanged(ChangeEventArgs e)
    {
        StatusFilter = e.Value?.ToString() ?? "All";
        await LoadAsync();
    }

    private void OnSearchTyping(ChangeEventArgs e)
    {
        SearchTerm = e.Value?.ToString() ?? "";
    }

    private async Task ClearFilters()
    {
        StatusFilter = "All";
        SearchTerm = "";
        await LoadAsync();
    }

    private async Task OpenReview(int id)
    {
        ShowModal = true;
        SaveError = null;
        Saving = false;
        Selected = null;

        SelectedId = id;

        var row = await Db.AdoptionApplication.AsNoTracking()
            .Join(Db.Pet.AsNoTracking(),
                a => a.PetId,
                p => p.Id,
                (a, p) => new RowVm
                {
                    ApplicationId = a.Id,
                    PetName = p.Name,
                    ApplicationDate = a.ApplicationDate,
                    Status = a.Status,
                    AdminRemarks = a.AdminRemarks ?? ""
                })
            .FirstOrDefaultAsync(x => x.ApplicationId == id);

        Selected = row;

        EditStatus = row?.Status ?? "Pending";
        EditRemarks = row?.AdminRemarks ?? "";
    }

    private void CloseModal()
    {
        ShowModal = false;
        Selected = null;
        SaveError = null;
    }

    private async Task SaveAsync()
    {
        SaveError = null;
        Saving = true;

        try
        {
            var entity = await Db.AdoptionApplication.FirstOrDefaultAsync(a => a.Id == SelectedId);
            if (entity == null) { SaveError = "Application not found."; return; }

            entity.Status = EditStatus;
            entity.AdminRemarks = EditRemarks;
            entity.ReviewedDateTime = DateTime.Now;

            await Db.SaveChangesAsync();

            await LoadAsync();
            CloseModal();
        }
        catch (Exception ex)
        {
            SaveError = ex.Message;
        }
        finally
        {
            Saving = false;
        }
    }

    private string StatusBadgeClass(string? status) => (status ?? "").ToLower() switch
    {
        "pending" => "bg-warning text-dark",
        "approved" => "bg-success",
        "rejected" => "bg-danger",
        _ => "bg-secondary"
    };

    private class RowVm
    {
        public int ApplicationId { get; set; }
        public string PetName { get; set; } = "";
        public DateTime ApplicationDate { get; set; }
        public string Status { get; set; } = "";
        public string AdminRemarks { get; set; } = "";
    }
} *@
