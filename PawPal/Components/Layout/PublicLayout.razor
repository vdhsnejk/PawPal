@inherits LayoutComponentBase

<!-- Top contact strip -->
<div class="bg-dark text-white small py-1">
    <div class="container d-flex justify-content-between align-items-center">
        <div class="d-flex gap-3">
            <span>enquiries@pawpal.sg</span>
            <span>+65 6123 4567</span>
        </div>
        <div class="d-flex gap-3">
            <a class="text-white text-decoration-none" href="#"><i class="bi bi-instagram"></i></a>
            <a class="text-white text-decoration-none" href="#"><i class="bi bi-facebook"></i></a>
        </div>
    </div>
</div>

<!-- Main navbar -->
<nav class="navbar navbar-expand-lg navbar-light bg-white shadow-sm sticky-top">
    <div class="container">

        <!-- Brand -->
        <NavLink class="navbar-brand fw-bold text-success" href="/">
            PawPal
        </NavLink>

        <!-- Mobile toggle -->
        <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#publicNav">
            <span class="navbar-toggler-icon"></span>
        </button>

        <!-- Menu -->
        <div class="collapse navbar-collapse" id="publicNav">
            <ul class="navbar-nav ms-auto align-items-lg-center gap-lg-2">

                <!-- Public links -->
                <li class="nav-item">
                    <NavLink class="nav-link" href="/pets">Adopt</NavLink>
                </li>

                <li class="nav-item">
                    <NavLink class="nav-link" href="/adoption-process">Adoption Process</NavLink>
                </li>

                <li class="nav-item">
                    <NavLink class="nav-link" href="/about">About</NavLink>
                </li>

                <!-- AUTH HANDLING -->
                <AuthorizeView>
                    <Authorized>
                        <li class="nav-item">
                            <NavLink class="nav-link" href="/my-applications">
                                My Applications
                            </NavLink>
                        </li>

                        <li class="nav-item ms-lg-3">
                            <NavLink class="btn btn-outline-success" href="/Account/Logout">
                                Logout
                            </NavLink>
                        </li>
                    </Authorized>

                    <NotAuthorized>
                        <li class="nav-item ms-lg-3">
                            <NavLink class="btn btn-outline-success" href="/Account/Login">
                                Login
                            </NavLink>
                        </li>

                        <li class="nav-item">
                            <NavLink class="btn btn-success" href="/Account/Register">
                                Register
                            </NavLink>
                        </li>
                    </NotAuthorized>
                </AuthorizeView>

            </ul>
        </div>
    </div>
</nav>

<!-- Page content -->
<main>
    @Body
</main>

<!-- Footer -->
<footer class="bg-light mt-5 border-top">
    <div class="container py-4 small text-muted d-flex justify-content-between flex-wrap gap-2">
        <span>© @DateTime.Now.Year PawPal</span>
        <span>Adopt responsibly • Verified shelters</span>
    </div>
</footer>
