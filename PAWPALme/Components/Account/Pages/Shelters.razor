@page "/shelters"
@rendermode InteractiveServer
@using PAWPALme.Models
@using PAWPALme.Repositories
@inject IShelterRepository ShelterRepo

<PageTitle>Our Shelters</PageTitle>

<div class="container mt-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2>Our Partner Shelters</h2>
        <a href="shelter/register" class="btn btn-outline-success">
            <i class="bi bi-plus-lg"></i> Register New Shelter
        </a>
    </div>

    @if (shelters == null)
    {
        <div class="spinner-border text-primary" role="status">
            <span class="visually-hidden">Loading...</span>
        </div>
    }
    else if (!shelters.Any())
    {
        <div class="alert alert-info">No shelters registered yet. Be the first!</div>
    }
    else
    {
        <div class="row g-4">
            @foreach (var s in shelters)
            {
                <div class="col-md-4">
                    <div class="card h-100 shadow-sm">
                        <div class="card-body">
                            <h5 class="card-title">@s.Name</h5>
                            <p class="card-text text-muted">@s.Address</p>
                            <p class="card-text"><i class="bi bi-telephone"></i> @s.Phone</p>
                        </div>
                    </div>
                </div>
            }
        </div>
    }
</div>

@code {
    private IEnumerable<Shelter>? shelters;

    protected override async Task OnInitializedAsync()
    {
        shelters = await ShelterRepo.GetAllAsync();
    }
}
