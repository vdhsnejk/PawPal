@page "/pets"
@using PAWPALme.Models
@using PAWPALme.Repositories
@inject IPetRepository PetRepo
@inject NavigationManager Nav

<PageTitle>Find Your Perfect Companion</PageTitle>

<div class="container-fluid mt-4">
    <div class="row">
        <div class="col-md-3">
            <div class="card p-3 shadow-sm">
                <h5 class="mb-3">Filters</h5>

                <div class="mb-3">
                    <label class="form-label">Search</label>
                    <input type="text" class="form-control" placeholder="Search name..."
                           @bind="searchTerm" @bind:event="oninput" @onkeyup="LoadPets" />
                </div>

                <div class="mb-3">
                    <label class="form-label">Species</label>
                    <select class="form-select" @bind="selectedSpecies" @onclick="LoadPets">
                        <option value="All">All Species</option>
                        <option value="Dog">Dog</option>
                        <option value="Cat">Cat</option>
                    </select>
                </div>

                <div class="mb-3">
                    <label class="form-label">Breed</label>
                    <select class="form-select" @bind="selectedBreed" @onclick="LoadPets">
                        <option value="All">All Breeds</option>
                        @foreach (var breed in breeds)
                        {
                            <option value="@breed">@breed</option>
                        }
                    </select>
                </div>

                <button class="btn btn-outline-secondary w-100" @onclick="ResetFilters">Reset Filters</button>
            </div>
        </div>

        <div class="col-md-9">
            <h2 class="text-success mb-3">Find Your Perfect Pet</h2>
            
            @if (pets == null)
            {
                <p>Loading...</p>
            }
            else
            {
                <p>Showing @pets.Count() pets</p>
                
                if (!pets.Any())
                {
                    <div class="alert alert-info">No pets found matching your criteria.</div>
                }
                else
                {
                    <div class="row row-cols-1 row-cols-md-3 g-4">
                        @foreach (var pet in pets)
                        {
                            <div class="col">
                                <div class="card h-100 shadow-sm border-0">
                                    <div style="height: 200px; background-color: #eee; display: flex; align-items: center; justify-content: center; overflow: hidden;">
                                        @if (!string.IsNullOrEmpty(pet.ImageUrl))
                                        {
                                            <img src="@pet.ImageUrl" class="card-img-top" style="height: 100%; width: 100%; object-fit: cover;" alt="@pet.Name">
                                        }
                                        else
                                        {
                                            <span class="text-muted">No Image</span>
                                        }
                                    </div>

                                    <div class="card-body">
                                        <h5 class="card-title fw-bold">@pet.Name</h5>
                                        <p class="card-text text-muted">@pet.Breed • @pet.Age years old</p>
                                        <span class="badge bg-success mb-2">@pet.Species</span>
                                        <p class="card-text small text-truncate">@pet.Description</p>
                                    </div>

                                    <div class="card-footer bg-white border-0 d-flex gap-2">
                                        <a href="/book-appointment/@pet.Id" class="btn btn-outline-primary w-100">Meet Me</a>
                                    </div>
                                </div>
                            </div>
                        }
                    </div>
                }
            }
        </div>
    </div>
</div>

@code {
    private IEnumerable<Pet>? pets;
    private IEnumerable<string> breeds = new List<string>();

    private string searchTerm = "";
    private string selectedSpecies = "All";
    private string selectedBreed = "All";

    protected override async Task OnInitializedAsync()
    {
        await LoadBreeds();
        await LoadPets();
    }

    private async Task LoadPets()
    {
        pets = await PetRepo.SearchAsync(searchTerm, selectedSpecies, selectedBreed, null);
    }

    private async Task LoadBreeds()
    {
        breeds = await PetRepo.GetBreedsAsync();
    }

    private async Task ResetFilters()
    {
        searchTerm = "";
        selectedSpecies = "All";
        selectedBreed = "All";
        await LoadPets();
    }
}