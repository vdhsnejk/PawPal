@page "/admin/appointments"
@using Microsoft.AspNetCore.Authorization
@attribute [Authorize(Roles = "Admin")]
@using PAWPALme.Models
@using PAWPALme.Services
@inject AppointmentService ApptService
@rendermode InteractiveServer

<PageTitle>Admin - Appointments</PageTitle>

<div class="container mt-4">
    <h2 class="mb-3">Appointment Requests</h2>

    @if (appointments is null)
    {
        <p>Loading...</p>
    }
    else if (appointments.Count == 0)
    {
        <div class="alert alert-info">No appointment requests yet.</div>
    }
    else
    {
        <table class="table table-hover shadow-sm">
            <thead class="table-dark">
                <tr>
                    <th>Date</th>
                    <th>Pet</th>
                    <th>Adopter</th>
                    <th>Email</th>
                    <th>Status</th>
                    <th style="width: 240px;">Actions</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var appt in appointments)
                {
                    <tr>
                        <td>@appt.AppointmentDate.ToString("yyyy-MM-dd HH:mm")</td>
                        <td>@(appt.Pet?.Name ?? $"Pet #{appt.PetId}")</td>
                        <td>@appt.AdopterName</td>
                        <td>@appt.AdopterEmail</td>
                        <td>
                            <span class="badge @GetBadgeClass(appt.Status)">@appt.Status</span>
                        </td>
                        <td>
                            @if (appt.Status == "Pending")
                            {
                                <button class="btn btn-sm btn-success me-1"
                                        @onclick="@(() => Approve(appt))">
                                    Approve
                                </button>

                                <button class="btn btn-sm btn-danger me-1"
                                        @onclick="@(() => Reject(appt))">
                                    Reject
                                </button>
                            }

                            <button class="btn btn-sm btn-outline-secondary"
                                    @onclick="@(() => DeleteAppt(appt.Id))">
                                Delete
                            </button>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    }
</div>

@code {
    private List<Appointment>? appointments;

    protected override async Task OnInitializedAsync()
    {
        await Reload();
    }

    private async Task Reload()
    {
        appointments = await ApptService.GetAppointmentsAsync();
    }

    private async Task Approve(Appointment appt)
    {
        appt.Status = "Confirmed";
        await ApptService.UpdateAppointmentAsync(appt);
        await Reload();
    }

    private async Task Reject(Appointment appt)
    {
        appt.Status = "Rejected";
        await ApptService.UpdateAppointmentAsync(appt);
        await Reload();
    }

    private async Task DeleteAppt(int id)
    {
        await ApptService.DeleteAppointmentAsync(id);
        await Reload();
    }

    private string GetBadgeClass(string status) => status switch
    {
        "Confirmed" => "bg-success",
        "Rejected" => "bg-danger",
        "Pending" => "bg-warning text-dark",
        _ => "bg-secondary"
    };
}

