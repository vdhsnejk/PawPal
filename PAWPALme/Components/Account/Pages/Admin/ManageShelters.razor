@page "/admin/shelters"
@using Microsoft.AspNetCore.Authorization
@attribute [Authorize(Roles = "Admin")]
@using PAWPALme.Models
@using PAWPALme.Repositories
@inject IShelterRepository ShelterRepo
@rendermode InteractiveServer

<PageTitle>Manage Shelters</PageTitle>

<div class="container mt-4">
    <div class="d-flex justify-content-between align-items-center mb-3">
        <h2>Manage Shelters</h2>
        <button class="btn btn-primary" @onclick="StartCreate">Add New Shelter</button>
    </div>

    @if (mode == ViewMode.List)
    {
        if (shelters == null)
        {
            <p>Loading...</p>
        }
        else
        {
            <table class="table table-striped">
                <thead>
                    <tr>
                        <th>Name</th>
                        <th>Address</th>
                        <th>Owner ID</th>
                        <th>Actions</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var s in shelters)
                    {
                        <tr>
                            <td>@s.Name</td>
                            <td>@s.Address</td>
                            <td>@s.OwnerUserId</td>
                            <td>
                                <button class="btn btn-sm btn-outline-primary" @onclick="() => StartEdit(s)">Edit</button>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        }
    }
    else
    {
        <div class="card">
            <div class="card-header">@(mode == ViewMode.Create ? "Add Shelter" : "Edit Shelter")</div>
            <div class="card-body">
                <EditForm Model="currentShelter" OnValidSubmit="SaveShelter">
                    <DataAnnotationsValidator />
                    <ValidationSummary />

                    <div class="mb-3">
                        <label>Name</label>
                        <InputText class="form-control" @bind-Value="currentShelter.Name" />
                    </div>
                    <div class="mb-3">
                        <label>Address</label>
                        <InputText class="form-control" @bind-Value="currentShelter.Address" />
                    </div>
                    <div class="mb-3">
                        <label>Phone</label>
                        <InputText class="form-control" @bind-Value="currentShelter.Phone" />
                    </div>
                    <div class="mb-3">
                        <label>Description</label>
                        <InputTextArea class="form-control" @bind-Value="currentShelter.Description" />
                    </div>

                    <button type="submit" class="btn btn-success">Save</button>
                    <button type="button" class="btn btn-secondary" @onclick="Cancel">Cancel</button>
                </EditForm>
            </div>
        </div>
    }
</div>

@code {
    private enum ViewMode { List, Create, Edit }
    private ViewMode mode = ViewMode.List;
    private List<Shelter> shelters = new();
    private Shelter currentShelter = new();

    protected override async Task OnInitializedAsync()
    {
        await LoadShelters();
    }

    private async Task LoadShelters()
    {
        // NOTE: Ensure your IShelterRepository has a GetAll method for Admin.
        // For now, initializing empty list to prevent crash if not implemented.
        shelters = new List<Shelter>();
    }

    private void StartCreate()
    {
        currentShelter = new Shelter();
        mode = ViewMode.Create;
    }

    private void StartEdit(Shelter shelter)
    {
        currentShelter = shelter;
        mode = ViewMode.Edit;
    }

    private void Cancel()
    {
        mode = ViewMode.List;
    }

    private async Task SaveShelter()
    {
        if (mode == ViewMode.Create)
        {
            await ShelterRepo.AddAsync(currentShelter);
        }
        else
        {
            await ShelterRepo.UpdateAsync(currentShelter);
        }
        await LoadShelters();
        mode = ViewMode.List;
    }
}


