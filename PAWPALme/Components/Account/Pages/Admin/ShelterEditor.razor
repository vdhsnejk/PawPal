@page "/admin/shelters/add"
@page "/admin/shelters/edit/{Id:int}"
@using PAWPALme.Models
@using PAWPALme.Services
@inject ShelterService ShelterService
@inject NavigationManager Nav

<PageTitle>@(Id == null ? "Add Shelter" : "Edit Shelter")</PageTitle>

<div class="container mt-4" style="max-width: 600px;">
    <div class="card shadow">
        <div class="card-header bg-primary text-white">
            <h4 class="mb-0">@(Id == null ? "Add New Shelter" : "Edit Shelter")</h4>
        </div>
        <div class="card-body">
            <EditForm Model="shelter" OnValidSubmit="SaveShelter" FormName="ShelterForm">
                <DataAnnotationsValidator />
                <ValidationSummary class="text-danger" />

                <div class="mb-3">
                    <label class="form-label">Shelter Name</label>
                    <InputText class="form-control" @bind-Value="shelter.Name" />
                    <ValidationMessage For="() => shelter.Name" class="text-danger" />
                </div>

                <div class="mb-3">
                    <label class="form-label">Address</label>
                    <InputTextArea class="form-control" @bind-Value="shelter.Address" rows="3" />
                </div>

                <div class="d-flex justify-content-between">
                    <a href="/admin/shelters" class="btn btn-secondary">Cancel</a>
                    <button type="submit" class="btn btn-success">Save Shelter</button>
                </div>
            </EditForm>
        </div>
    </div>
</div>

@code {
    [Parameter] public int? Id { get; set; }

    [SupplyParameterFromForm]
    public Shelter shelter { get; set; } = new();

    protected override async Task OnInitializedAsync()
    {
        if (Id.HasValue)
        {
            var found = await ShelterService.GetShelterByIdAsync(Id.Value);
            if (found != null) shelter = found;
        }
    }

    private async Task SaveShelter()
    {
        if (Id == null)
            await ShelterService.AddShelterAsync(shelter);
        else
            await ShelterService.UpdateShelterAsync(shelter);

        Nav.NavigateTo("/admin/shelters");
    }
}