@page "/admin/shelters"
@using Microsoft.AspNetCore.Authorization
@attribute [Authorize(Roles = "Admin")]
@using PAWPALme.Models
@using PAWPALme.Repositories
@inject IShelterRepository ShelterRepo
@rendermode InteractiveServer

<PageTitle>Manage Shelters</PageTitle>

<div class="container mt-4">
    <div class="d-flex justify-content-between align-items-center mb-3">
        <h2>Manage Shelters</h2>
        <button class="btn btn-primary" @onclick="StartCreate">
            <i class="bi bi-plus-lg"></i> Add New Shelter
        </button>
    </div>

    @if (mode == ViewMode.List)
    {
        if (shelters == null)
        {
            <div class="spinner-border text-primary"></div>
        }
        else
        {
            <div class="admin-table-container">
                <table class="table table-striped table-hover align-middle mb-0">
                    <thead class="table-dark">
                        <tr>
                            <th>Name</th>
                            <th>Address</th>
                            <th>Owner ID</th>
                            <th>Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var s in shelters)
                        {
                            <tr>
                                <td class="fw-bold">@s.Name</td>
                                <td>@s.Address</td>
                                <td><small class="text-muted">@s.OwnerUserId</small></td>
                                <td>
                                    <button class="btn btn-sm btn-outline-primary" @onclick="() => StartEdit(s)">
                                        <i class="bi bi-pencil"></i> Edit
                                    </button>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        }
    }
    else
    {
        <div class="card shadow-sm">
            <div class="card-header bg-dark text-white">
                @(mode == ViewMode.Create ? "Add New Shelter" : "Edit Shelter")
            </div>
            <div class="card-body">
                <EditForm Model="currentShelter" OnValidSubmit="SaveShelter">
                    <DataAnnotationsValidator />
                    <ValidationSummary class="text-danger" />

                    <div class="mb-3">
                        <label class="form-label">Name</label>
                        <InputText class="form-control" @bind-Value="currentShelter.Name" />
                    </div>
                    <div class="mb-3">
                        <label class="form-label">Address</label>
                        <InputText class="form-control" @bind-Value="currentShelter.Address" />
                    </div>
                    <div class="mb-3">
                        <label class="form-label">Phone</label>
                        <InputText class="form-control" @bind-Value="currentShelter.Phone" />
                    </div>
                    <div class="mb-3">
                        <label class="form-label">Description</label>
                        <InputTextArea class="form-control" rows="3" @bind-Value="currentShelter.Description" />
                    </div>

                    <div class="d-flex justify-content-end gap-2">
                        <button type="button" class="btn btn-secondary" @onclick="Cancel">Cancel</button>
                        <button type="submit" class="btn btn-success">Save Shelter</button>
                    </div>
                </EditForm>
            </div>
        </div>
    }
</div>

@code {
    private enum ViewMode { List, Create, Edit }
    private ViewMode mode = ViewMode.List;
    private List<Shelter>? shelters;
    private Shelter currentShelter = new();

    protected override async Task OnInitializedAsync()
    {
        await LoadShelters();
    }

    private async Task LoadShelters()
    {
        shelters = (await ShelterRepo.GetAllAsync()).ToList();
    }

    private void StartCreate()
    {
        currentShelter = new Shelter();
        mode = ViewMode.Create;
    }

    private void StartEdit(Shelter shelter)
    {
        currentShelter = shelter;
        mode = ViewMode.Edit;
    }

    private void Cancel()
    {
        mode = ViewMode.List;
    }

    private async Task SaveShelter()
    {
        if (mode == ViewMode.Create)
        {
            await ShelterRepo.AddAsync(currentShelter);
        }
        else
        {
            await ShelterRepo.UpdateAsync(currentShelter);
        }
        await LoadShelters();
        mode = ViewMode.List;
    }
}


