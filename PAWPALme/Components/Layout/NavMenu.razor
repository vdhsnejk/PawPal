@implements IDisposable
@inject NavigationManager NavigationManager

<div class="top-row ps-3 navbar navbar-dark">
    <div class="container-fluid">
        <a class="navbar-brand" href="">PAWPALme</a>
    </div>
</div>

<input type="checkbox" title="Navigation menu" class="navbar-toggler" />

<div class="nav-scrollable" onclick="document.querySelector('.navbar-toggler')?.click()">
    <nav class="flex-column">

        <div class="nav-item px-3">
            <NavLink class="nav-link" href="">
                <span class="bi bi-house-door-fill-nav-menu" aria-hidden="true"></span> Home
            </NavLink>
        </div>

        <div class="nav-item px-3">
            <NavLink class="nav-link" href="pets">
                <span class="bi bi-search-nav-menu" aria-hidden="true"></span> Browse Pets
            </NavLink>
        </div>

        <div class="nav-item px-3">
            <NavLink class="nav-link" href="shelters">
                <span class="bi bi-building-nav-menu" aria-hidden="true"></span> Shelters
            </NavLink>
        </div>

        <AuthorizeView>
            <Authorized>
                <div class="nav-item px-3">
                    <NavLink class="nav-link" href="admin/pets">
                        <span class="bi bi-gear-fill-nav-menu" aria-hidden="true"></span> Manage Pets
                    </NavLink>
                </div>

                <div class="nav-item px-3">
                    <NavLink class="nav-link" href="admin/shelters">
                        <span class="bi bi-gear-fill-nav-menu" aria-hidden="true"></span> Manage Shelters
                    </NavLink>
                </div>

                <div class="nav-item px-3">
                    @* Added leading slash to action="/Account/Logout" for global path resolution *@
                    <form action="/Account/Logout" method="post" @formname="logoutForm">
                        <AntiforgeryToken />
                        <button type="submit" class="nav-link btn btn-link">
                            <span class="bi bi-arrow-bar-left-nav-menu" aria-hidden="true"></span> Logout
                        </button>
                    </form>
                </div>
            </Authorized>

            <NotAuthorized>
                @* No sidebar login/register links (as per your request) *@
            </NotAuthorized>
        </AuthorizeView>

    </nav>
</div>

@code {
    private string? currentUrl;

    protected override void OnInitialized()
    {
        currentUrl = NavigationManager.ToBaseRelativePath(NavigationManager.Uri);
        NavigationManager.LocationChanged += OnLocationChanged;
    }

    private void OnLocationChanged(object? sender, LocationChangedEventArgs e)
    {
        currentUrl = NavigationManager.ToBaseRelativePath(e.Location);
        StateHasChanged();
    }

    public void Dispose()
    {
        NavigationManager.LocationChanged -= OnLocationChanged;
    }
}





