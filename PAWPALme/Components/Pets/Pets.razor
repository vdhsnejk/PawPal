@page "/pets"
@using PAWPALme.Models
@using PAWPALme.Repositories
@using PAWPALme.Enums
@inject IPetRepository PetRepo

<PageTitle>Adopt a Pet</PageTitle>

<div class="container mt-4">
    <div class="page-container">

        <aside class="filters-sidebar shadow-sm">
            <h5 class="mb-3"><i class="bi bi-funnel-fill"></i> Filters</h5>

            <div class="filter-group">
                <label class="filter-label">Search Name</label>
                <input type="text" class="form-control" @bind="searchTerm" @bind:event="oninput" placeholder="e.g. Luna" />
            </div>

            <div class="filter-group">
                <label class="filter-label">Species</label>
                <select class="form-select" @bind="selectedSpecies">
                    <option value="">All Species</option>
                    <option value="Dog">Dog</option>
                    <option value="Cat">Cat</option>
                </select>
            </div>

            <div class="filter-group">
                <label class="filter-label">Size</label>
                <select class="form-select" @bind="selectedSize">
                    <option value="">Any Size</option>
                    <option value="Small">Small</option>
                    <option value="Medium">Medium</option>
                    <option value="Large">Large</option>
                </select>
            </div>

            <button class="btn btn-outline-secondary w-100 btn-sm" @onclick="ClearFilters">
                Reset Filters
            </button>
        </aside>

        <main class="pet-grid">
            <div class="mb-4">
                <h2 class="fw-bold text-primary">Find Your Best Friend</h2>
                <p class="text-muted">Browse our lovely pets waiting for a forever home.</p>
            </div>

            @if (filteredPets == null)
            {
                <div class="text-center py-5">
                    <div class="spinner-border text-primary"></div>
                </div>
            }
            else if (!filteredPets.Any())
            {
                <div class="alert alert-info text-center">
                    No pets match your current filters. Try clearing them!
                </div>
            }
            else
            {
                <div class="row g-4">
                    @foreach (var pet in filteredPets)
                    {
                        <div class="col-md-6 col-lg-4">
                            <div class="card shadow-sm pet-card">
                                <div class="card-img-wrapper">
                                    @if (!string.IsNullOrEmpty(pet.ImageUrl))
                                    {
                                        <img src="@pet.ImageUrl" class="pet-img" alt="@pet.Name" />
                                    }
                                    else
                                    {
                                        <i class="bi bi-camera fs-1 text-muted"></i>
                                    }
                                    <span class="badge bg-dark badge-overlay">@pet.Breed</span>
                                </div>
                                <div class="card-body">
                                    <h5 class="card-title fw-bold">@pet.Name</h5>
                                    <p class="card-text text-muted small mb-2">
                                        @pet.Species • @pet.Age yrs • @pet.Gender
                                    </p>
                                    <div class="d-flex justify-content-between align-items-center mt-3">
                                        <a href="pet/@pet.Id" class="btn btn-outline-primary btn-sm w-100">
                                            View Profile
                                        </a>
                                    </div>
                                </div>
                            </div>
                        </div>
                    }
                </div>
            }
        </main>
    </div>
</div>

@code {
    private IEnumerable<Pet>? allPets;

    // Filter logic using Strings
    private IEnumerable<Pet>? filteredPets => allPets?
        .Where(p => p.Status == PetStatus.Available) // Only show available pets
        .Where(p => string.IsNullOrEmpty(searchTerm) || p.Name.Contains(searchTerm, StringComparison.OrdinalIgnoreCase))
        .Where(p => string.IsNullOrEmpty(selectedSpecies) || p.Species == selectedSpecies)
        .Where(p => string.IsNullOrEmpty(selectedSize) || p.Size == selectedSize);

    private string searchTerm = "";
    private string selectedSpecies = "";
    private string selectedSize = "";

    protected override async Task OnInitializedAsync()
    {
        allPets = await PetRepo.GetAllAsync();
    }

    private void ClearFilters()
    {
        searchTerm = "";
        selectedSpecies = "";
        selectedSize = "";
    }
}