@page "/auth"
@rendermode InteractiveServer
@using System.Security.Claims
@using Microsoft.AspNetCore.Identity
@using PAWPALme.Data
@using PAWPALme.Repositories
@using PAWPALme.Models
@inject SignInManager<ApplicationUser> SignInManager
@inject UserManager<ApplicationUser> UserManager
@inject NavigationManager Nav
@inject IShelterRepository ShelterRepo

<PageTitle>Login / Sign up</PageTitle>

<script src="https://cdn.tailwindcss.com"></script>

<style>
    .gradient-bg {
        background: linear-gradient(135deg, #e0e7ff 0%, #fce7f3 100%);
        min-height: 100vh;
    }

    .gradient-btn {
        background: linear-gradient(to right, #4f46e5, #9333ea);
    }

        .gradient-btn:hover {
            background: linear-gradient(to right, #4338ca, #7e22ce);
        }
</style>

<div class="gradient-bg flex items-center justify-center p-4">
    <div class="w-full max-w-md">

        <div class="flex justify-between items-center mb-4">
            @if (!isAdminMode)
            {
                <div class="flex bg-white rounded-lg p-1 shadow-sm">
                    <button type="button"
                            class="px-4 py-1 text-sm rounded-md transition-all @(authType == AuthType.Adopter ? "bg-indigo-100 text-indigo-700 font-semibold" : "text-gray-500 hover:text-gray-700")"
                            @onclick="() => SetAuthType(AuthType.Adopter)">
                        Adopter
                    </button>
                    <button type="button"
                            class="px-4 py-1 text-sm rounded-md transition-all @(authType == AuthType.Shelter ? "bg-indigo-100 text-indigo-700 font-semibold" : "text-gray-500 hover:text-gray-700")"
                            @onclick="() => SetAuthType(AuthType.Shelter)">
                        Shelter
                    </button>
                </div>
            }
            else
            {
                <span></span>
            }

            <button @onclick="ToggleAdminMode"
                    class="px-6 py-2 rounded-lg font-semibold transition-all duration-300 shadow-md hover:shadow-lg @(isAdminMode ? "bg-red-600 text-white hover:bg-red-700" : "bg-white text-gray-700 hover:bg-gray-50")">
                @(isAdminMode ? "ADMIN MODE" : "USER")
            </button>
        </div>

        <div class="bg-white rounded-2xl shadow-2xl p-8">

            <div class="text-center mb-8">
                <div class="inline-block p-3 rounded-full mb-4 @(isAdminMode ? "bg-red-100" : "bg-indigo-100")">
                    @if (isAdminMode)
                    {
                        <svg class="w-8 h-8 text-red-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 15v2m-6 4h12a2 2 0 002-2v-6a2 2 0 00-2-2H6a2 2 0 00-2 2v6a2 2 0 002 2zm10-10V7a4 4 0 00-8 0v4h8z" />
                        </svg>
                    }
                    else
                    {
                        <svg class="w-8 h-8 text-indigo-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z" />
                        </svg>
                    }
                </div>
                <h1 class="text-3xl font-bold text-gray-800 mb-2">@HeaderTitle</h1>
                <p class="text-gray-600">@HeaderSubtitle</p>
            </div>

            @if (!string.IsNullOrWhiteSpace(errorMessage))
            {
                <div class="mb-4 p-3 bg-red-100 text-red-700 rounded-lg text-sm">
                    @errorMessage
                </div>
            }

            <EditForm Model="form" OnValidSubmit="HandleSubmit" class="space-y-5">
                <DataAnnotationsValidator />

                <div>
                    <label class="block text-sm font-medium text-gray-700 mb-2">Email Address</label>
                    <div class="relative">
                        <svg class="absolute left-3 top-1/2 transform -translate-y-1/2 text-gray-400 w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 8l7.89 5.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z" />
                        </svg>
                        <InputText @bind-Value="form.Email" placeholder="user@example.com" class="w-full pl-11 pr-4 py-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-indigo-500 focus:border-transparent outline-none transition" />
                    </div>
                </div>

                @if (!isLoginMode && !isAdminMode)
                {
                    if (authType == AuthType.Adopter)
                    {
                        <div>
                            <label class="block text-sm font-medium text-gray-700 mb-2">Full Name</label>
                            <InputText @bind-Value="form.AdopterName" placeholder="John Doe" class="w-full px-4 py-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-indigo-500 outline-none" />
                        </div>
                    }
                    else
                    {
                        <div>
                            <label class="block text-sm font-medium text-gray-700 mb-2">Shelter Name</label>
                            <InputText @bind-Value="form.ShelterName" placeholder="Happy Tails Shelter" class="w-full px-4 py-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-indigo-500 outline-none" />
                        </div>
                        <div>
                            <label class="block text-sm font-medium text-gray-700 mb-2">Address</label>
                            <InputText @bind-Value="form.ShelterAddress" placeholder="123 Street" class="w-full px-4 py-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-indigo-500 outline-none" />
                        </div>
                        <div>
                            <label class="block text-sm font-medium text-gray-700 mb-2">Phone</label>
                            <InputText @bind-Value="form.ShelterPhone" placeholder="+65 9123 4567" class="w-full px-4 py-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-indigo-500 outline-none" />
                        </div>
                        <div>
                            <label class="block text-sm font-medium text-gray-700 mb-2">Description</label>
                            <InputTextArea @bind-Value="form.ShelterDescription" placeholder="Tell us about your shelter..." class="w-full px-4 py-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-indigo-500 outline-none" />
                        </div>
                    }
                }

                <div>
                    <label class="block text-sm font-medium text-gray-700 mb-2">Password</label>
                    <div class="relative">
                        <svg class="absolute left-3 top-1/2 transform -translate-y-1/2 text-gray-400 w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 15v2m-6 4h12a2 2 0 002-2v-6a2 2 0 00-2-2H6a2 2 0 00-2 2v6a2 2 0 002 2zm10-10V7a4 4 0 00-8 0v4h8z" />
                        </svg>
                        <InputText type="@(showPassword ? "text" : "password")" @bind-Value="form.Password" placeholder="••••••••" class="w-full pl-11 pr-12 py-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-indigo-500 focus:border-transparent outline-none transition" />

                        <button type="button" @onclick="TogglePassword" class="absolute right-3 top-1/2 transform -translate-y-1/2 text-gray-400 hover:text-gray-600">
                            <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 12a3 3 0 11-6 0 3 3 0 016 0z" />
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M2.458 12C3.732 7.943 7.523 5 12 5c4.478 0 8.268 2.943 9.542 7-1.274 4.057-5.064 7-9.542 7-4.477 0-8.268-2.943-9.542-7z" />
                            </svg>
                        </button>
                    </div>
                </div>

                @if (!isLoginMode)
                {
                    <div>
                        <label class="block text-sm font-medium text-gray-700 mb-2">Confirm Password</label>
                        <div class="relative">
                            <svg class="absolute left-3 top-1/2 transform -translate-y-1/2 text-gray-400 w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 15v2m-6 4h12a2 2 0 002-2v-6a2 2 0 00-2-2H6a2 2 0 00-2 2v6a2 2 0 002 2zm10-10V7a4 4 0 00-8 0v4h8z" />
                            </svg>
                            <InputText type="@(showPassword ? "text" : "password")" @bind-Value="form.ConfirmPassword" placeholder="••••••••" class="w-full pl-11 pr-4 py-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-indigo-500 focus:border-transparent outline-none transition" />
                        </div>
                    </div>
                }

                @if (isLoginMode)
                {
                    <div class="flex justify-end">
                        <a href="/Account/ForgotPassword" class="text-sm text-indigo-600 hover:text-indigo-700 font-medium">
                            Forgot password?
                        </a>
                    </div>
                }

                <button type="submit"
                        class="w-full py-3 rounded-lg font-semibold text-white transition-all duration-300 shadow-lg hover:shadow-xl transform hover:-translate-y-0.5 @(isAdminMode ? "bg-red-600 hover:bg-red-700" : "gradient-btn")">
                    @(isLoginMode ? "Sign In" : "Create Account")
                </button>

            </EditForm>

            @if (!isAdminMode)
            {
                <div class="mt-6 text-center">
                    <p class="text-gray-600">
                        @(isLoginMode ? "Don't have an account? " : "Already have an account? ")
                        <button @onclick="ToggleLoginMode" class="text-indigo-600 hover:text-indigo-700 font-semibold">
                            @(isLoginMode ? "Sign up" : "Sign in")
                        </button>
                    </p>
                </div>
            }
        </div>
    </div>
</div>

@code {
    [SupplyParameterFromQuery] private string? returnUrl { get; set; }

    private bool isLoginMode = true;
    private bool isAdminMode = false;
    private bool showPassword = false;
    private string? errorMessage;

    private AuthType authType = AuthType.Adopter;
    private AuthForm form = new();

    private string HeaderTitle => isAdminMode ? "Admin Access" : (authType == AuthType.Shelter ? "Shelter Portal" : "Welcome");
    private string HeaderSubtitle => isLoginMode ? "Sign in to your account" : "Create a new account";

    private void SetAuthType(AuthType type)
    {
        authType = type;
        isAdminMode = false;
        ResetMessages();
        form = new AuthForm();
    }

    private void ToggleAdminMode()
    {
        isAdminMode = !isAdminMode;
        isLoginMode = true; // Admins usually just login
        authType = AuthType.Adopter; // Reset
        ResetMessages();
    }

    private void ToggleLoginMode()
    {
        isLoginMode = !isLoginMode;
        ResetMessages();
    }

    private void TogglePassword() => showPassword = !showPassword;

    private void ResetMessages()
    {
        errorMessage = null;
    }

    private async Task HandleSubmit()
    {
        ResetMessages();
        if (isLoginMode) await HandleLogin();
        else await HandleRegister();
    }

    private async Task HandleLogin()
    {
        var email = (form.Email ?? "").Trim();
        if (string.IsNullOrWhiteSpace(email)) { errorMessage = "Email is required."; return; }

        var user = await UserManager.FindByEmailAsync(email) ?? await UserManager.FindByNameAsync(email);
        if (user is null) { errorMessage = "Account not found."; return; }

        // Role Check
        if (isAdminMode)
        {
            if (!await UserManager.IsInRoleAsync(user, "Admin")) { errorMessage = "Not an admin account."; return; }
        }
        else
        {
            var requiredRole = authType == AuthType.Shelter ? "Shelter" : "Adopter";
            if (!await UserManager.IsInRoleAsync(user, requiredRole)) { errorMessage = $"Not a {requiredRole} account."; return; }
        }

        var result = await SignInManager.PasswordSignInAsync(user.UserName!, form.Password ?? "", false, false);
        if (!result.Succeeded) { errorMessage = "Invalid login attempt."; return; }

        Nav.NavigateTo(ResolveTarget(), replace: true);
    }

    private async Task HandleRegister()
    {
        if (isAdminMode) { errorMessage = "Admin registration is restricted."; return; }
        if (form.Password != form.ConfirmPassword) { errorMessage = "Passwords do not match."; return; }
        if (string.IsNullOrWhiteSpace(form.Email)) { errorMessage = "Email is required."; return; }

        // Basic Validations
        if (authType == AuthType.Shelter && string.IsNullOrWhiteSpace(form.ShelterName)) { errorMessage = "Shelter name is required."; return; }
        if (authType == AuthType.Adopter && string.IsNullOrWhiteSpace(form.AdopterName)) { errorMessage = "Name is required."; return; }

        var user = new ApplicationUser { UserName = form.Email, Email = form.Email, EmailConfirmed = true };
        var create = await UserManager.CreateAsync(user, form.Password ?? "");

        if (!create.Succeeded)
        {
            errorMessage = string.Join(" ", create.Errors.Select(e => e.Description));
            return;
        }

        if (authType == AuthType.Adopter)
        {
            await UserManager.AddToRoleAsync(user, "Adopter");
            await UserManager.AddClaimAsync(user, new Claim("FullName", form.AdopterName!.Trim()));
        }
        else
        {
            await UserManager.AddToRoleAsync(user, "Shelter");

            // FIX: Using Repository Pattern instead of removed ShelterService
            var newShelter = new Shelter
            {
                Name = form.ShelterName!.Trim(),
                Address = (form.ShelterAddress ?? "").Trim(),
                Phone = (form.ShelterPhone ?? "").Trim(),
                Description = (form.ShelterDescription ?? "").Trim(),
                OwnerUserId = user.Id
            };
            await ShelterRepo.AddAsync(newShelter);
        }

        await SignInManager.SignInAsync(user, isPersistent: false);
        Nav.NavigateTo(ResolveTarget(), replace: true);
    }

    private string ResolveTarget()
    {
        if (!string.IsNullOrWhiteSpace(returnUrl)) return returnUrl!;
        if (isAdminMode) return "/admin/pets";
        if (authType == AuthType.Shelter) return "/shelter/dashboard";
        return "/";
    }

    private sealed class AuthForm
    {
        public string? Email { get; set; }
        public string? Password { get; set; }
        public string? ConfirmPassword { get; set; }
        public string? AdopterName { get; set; }
        public string? ShelterName { get; set; }
        public string? ShelterAddress { get; set; }
        public string? ShelterPhone { get; set; }
        public string? ShelterDescription { get; set; }
    }

    private enum AuthType { Adopter, Shelter }
}









