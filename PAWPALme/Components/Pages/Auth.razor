@page "/auth"

<PageTitle>Login / Sign Up</PageTitle>

<div class="container mt-5" style="max-width: 900px;">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2 class="mb-0">Login / Sign Up</h2>
    </div>

    <div class="row g-4">
        <div class="col-12 col-lg-6">
            <div class="card shadow-sm h-100">
                <div class="card-body">
                    <h4 class="card-title">Adopters</h4>
                    <p class="text-muted">Browse pets and submit adoption applications.</p>

                    <div class="d-grid gap-2">
                        <a class="btn btn-primary" href="/Account/Login?ReturnUrl=/">Sign in</a>
                        <a class="btn btn-outline-primary" href="/Account/Register?ReturnUrl=/">Sign up</a>
                    </div>
                </div>
            </div>
        </div>

        <div class="col-12 col-lg-6">
            <div class="card shadow-sm h-100">
                <div class="card-body">
                    <h4 class="card-title">Shelters</h4>
                    <p class="text-muted">Manage your shelter and list pets for adoption.</p>

                    <div class="d-grid gap-2">
                        <a class="btn btn-primary" href="/Account/Login?ReturnUrl=/dashboard">Sign in</a>
                        <a class="btn btn-outline-primary" href="/Account/ShelterRegister?ReturnUrl=/dashboard">Sign up</a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>









