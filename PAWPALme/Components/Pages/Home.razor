@page "/"
@using PAWPALme.Models
@using PAWPALme.Repositories
@using Microsoft.AspNetCore.Components.Authorization
@inject IPetRepository PetRepo
@inject NavigationManager Nav
@inject AuthenticationStateProvider AuthStateProvider

<PageTitle>PawPal | Home</PageTitle>

<div class="neumorph-container">

    <div class="row min-vh-50 mb-5">
        <div class="col-12">
            <div class="neu-card p-5 h-100 d-flex flex-column justify-content-center">

                <div class="d-flex justify-content-between align-items-start mb-4">
                    <span class="badge rounded-pill text-bg-primary px-3 py-2">SYSTEM: ONLINE</span>

                    <AuthorizeView>
                        <Authorized>
                            <a href="my-appointments" class="neu-btn neu-btn-sm">
                                <i class="bi bi-controller me-2"></i>Dashboard
                            </a>
                        </Authorized>
                        <NotAuthorized>
                            <a href="auth" class="neu-btn neu-btn-primary neu-btn-sm">
                                <i class="bi bi-power me-2"></i>Log In / Sign Up
                            </a>
                        </NotAuthorized>
                    </AuthorizeView>
                </div>

                <div class="text-center mt-3">
                    <h1 class="display-3 fw-bold text-dark mb-4">The Future of <span class="text-primary">Pet Adoption</span></h1>
                    <div class="row justify-content-center">
                        <div class="col-lg-8">
                            <p class="lead text-muted mb-4">
                                PawPal bridges the digital gap between rescue organizations and potential adopters.
                                We provide a centralized, streamlined dashboard that replaces fragmented information
                                with transparency and ease.
                            </p>
                            <p class="text-muted mb-5">
                                Initialize your journey today. Browse our verified database of adoptable pets,
                                view detailed medical profiles, and connect directly with local shelters.
                            </p>
                        </div>
                    </div>
                </div>

            </div>
        </div>
    </div>

    <div class="row mb-3">
        <div class="col-12 text-center">
            <h3 class="text-dark fw-bold mb-0">Featured Pets</h3>
            <p class="text-muted small">Meet our newest arrivals</p>
        </div>
    </div>

    @if (_pets == null)
    {
        <div class="text-center py-5">
            <div class="spinner-border text-primary" role="status"></div>
            <p class="mt-2 text-muted">Loading assets...</p>
        </div>
    }
    else if (!_pets.Any())
    {
        <div class="neu-card p-5 text-center">
            <i class="bi bi-inbox fs-1 text-muted"></i>
            <p class="mt-3">No data streams found.</p>
        </div>
    }
    else
    {
        <div class="row g-4 mb-5">
            @foreach (var pet in _petsPreview)
            {
                <div class="col-md-4 col-sm-6">
                    <div class="neu-card h-100 pet-card">
                        <div class="pet-img-wrapper mb-3">
                            @if (!string.IsNullOrEmpty(pet.ImageUrl))
                            {
                                <img src="@pet.ImageUrl" class="img-fluid rounded-3" alt="@pet.Name" />
                            }
                            else
                            {
                                <div class="neu-inset d-flex align-items-center justify-content-center h-100 rounded-3 text-muted">
                                    <i class="bi bi-camera fs-1"></i>
                                </div>
                            }
                        </div>
                        <h4 class="fw-bold mb-1">@pet.Name</h4>
                        <p class="text-muted small mb-3">@pet.Breed • @pet.Age yrs</p>
                        <a href="pet/@pet.Id" class="neu-btn neu-btn-sm w-100 text-center">View Details</a>
                    </div>
                </div>
            }
        </div>
        <div class="row">
            <div class="col-12 text-center">
                <a href="pets" class="neu-btn neu-btn-primary px-5 py-3"><i class="bi bi-collection me-2"></i> View All Pets</a>
            </div>
        </div>
    }
</div>

@code {
    private IEnumerable<Pet>? _pets;
    private IEnumerable<Pet> _petsPreview = new List<Pet>();
    protected override async Task OnInitializedAsync()
    {
        _pets = await PetRepo.GetAllAsync();
        _petsPreview = _pets.OrderByDescending(p => p.DateAdded).Take(3).ToList();
    }
}